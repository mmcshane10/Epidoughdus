@{
  Layout = "_Layout";
}

@model Epidoughdus.Models.Treat
@using System.Collections.Generic


<h2>Treat Details</h2>
<hr/>
<h3>Name: @Html.DisplayFor(model => model.Name)</h3>
<h3>Calories: @Html.DisplayFor(model => model.Calories)</h3>
<h3>
@switch(Model.Rating)
  {
    case "1":
      <i class="fas fa-star"></i><i class="fas fa-star fas-faded"></i><i class="fas fa-star fas-faded"></i><i class="fas fa-star fas-faded"></i><i class="fas fa-star fas-faded"></i>
      break;
    case "2":
      <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star fas-faded"></i><i class="fas fa-star fas-faded"></i><i class="fas fa-star fas-faded"></i>
      break;
    case "3":
      <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star fas-faded"></i><i class="fas fa-star fas-faded"></i>
      break;
    case "4":
      <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star fas-faded"></i>
      break;
    case "5":
      <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i>
      break;
  }
</h3>

@if(@Model.Flavors.Count == 0)
{
  <p>This item does not belong to any categories</p>
}
else
{
  <h3>Flavors this recipe belongs to:</h3>
  <div class="flavor-wrap">
    @foreach(var join in Model.Flavors)
    {
        <p>@join.Flavor.Type</p>
        @using (Html.BeginForm("DeleteFlavor", "Treats"))
        {
        @Html.Hidden("joinId", @join.FlavorTreatId)
        <input type="submit" value="Delete" class="btn btn-info"/>
        }
    }
  </div>
}

<p>@Html.ActionLink("Back to list", "Index", new {}, new {@class = "html-links"}) | @Html.ActionLink("Edit Item", "Edit", new { id = Model.TreatId }, new {@class = "html-links"}) | @Html.ActionLink("Delete Item", "Delete", new { id = Model.TreatId }, new {@class = "html-links"}) | @Html.ActionLink("Add a Flavor", "AddFlavor", new { id = Model.TreatId }, new {@class = "html-links"})</p>